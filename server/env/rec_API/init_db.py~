from rec_app.models import Category

CATEGORIES_PATH = "./rec_app/resources/clean_categories.txt"

class InitCategories():
    def load_data(self,path):
        lines=[]
        #opening file trainingData at path given
        with open(path, 'r') as data:
            #iterating over each line in trainingData
            for line in data:
                lines.append(line.strip().lower())
        return lines


    def create_category(self,name):
        c = Category(name=name)
        c.save()

    def create_categories(self):
        names = self.load_data(CATEGORIES_PATH)
        for name in names:
            self.create_category(name)

    def delete_all(self):
        Category.objects.all().delete(


